<h2>User info</h2>
  <%= form_with model: @user do |f| %>
    <div class="form-group">
    <label>Name</label></br>
    <%= f.text_field :name %>
    </div>
    <div class="form-group">
    <label>User image</label></br>
    <%= f.file_field :profile_image, accept: "image/*" %>
    </div>
    <div class="form-group">
    <label>Introduction</label></br>
    <%= f.text_area :introduction %></br>
    </div>
    <div class="form-group">
    <%= f.submit "Update User" %>
    </div>
  <%end%>